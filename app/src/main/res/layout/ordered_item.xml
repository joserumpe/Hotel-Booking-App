<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    app:cardElevation="4dp">


    <RelativeLayout
        android:background="@color/overlayBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/users_email"
            android:background="@color/overlayBackground"
            android:textColor="@android:color/white"
            android:paddingLeft="6dp"
            android:text=" email of user"
            android:textSize="20sp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="4dp"
            android:layout_below="@+id/users_email"
            android:id="@+id/users_phone"
            android:background="@color/overlayBackground"
            android:textColor="@android:color/white"
            android:paddingLeft="6dp"
            android:text=" Phone"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="4dp"
            android:layout_below="@+id/users_phone"
            android:id="@+id/food_name"
            android:background="@color/overlayBackground"
            android:textColor="@android:color/white"
            android:paddingLeft="6dp"
            android:text=" food"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="4dp"
            android:layout_below="@+id/food_name"
            android:id="@+id/amount"
            android:background="@color/overlayBackground"
            android:textColor="@android:color/white"
            android:paddingLeft="6dp"
            android:text=" amount"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginBottom="4dp"
            android:layout_below="@+id/amount"
            android:id="@+id/payment_state"
            android:background="@color/overlayBackground"
            android:textColor="@android:color/white"
            android:paddingLeft="6dp"
            android:text=" Payment State"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="gone"
            android:layout_marginBottom="4dp"
            android:layout_below="@+id/book_departure"
            android:id="@+id/book_status"
            android:background="@color/overlayBackground"
            android:textColor="@android:color/white"
            android:paddingLeft="6dp"
            android:text=" status"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        />
    </RelativeLayout>

</android.support.v7.widget.CardView>