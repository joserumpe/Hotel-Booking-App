<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardElevation="4dp">


    <RelativeLayout
        android:background="@drawable/meatfood_small"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/users_name"
            android:background="@color/overlayBackground"
            android:textColor="@android:color/white"
            android:paddingLeft="6dp"
            android:text=" name of user"
            android:textSize="20sp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="4dp"
            android:layout_below="@+id/users_name"
            android:id="@+id/booked_room"
            android:background="@color/overlayBackground"
            android:textColor="@android:color/white"
            android:paddingLeft="6dp"
            android:text=" room"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="4dp"
            android:layout_below="@+id/booked_room"
            android:id="@+id/book_amount"
            android:background="@color/overlayBackground"
            android:textColor="@android:color/white"
            android:paddingLeft="6dp"
            android:text=" amount"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="4dp"
            android:layout_below="@+id/book_amount"
            android:id="@+id/book_arrival"
            android:background="@color/overlayBackground"
            android:textColor="@android:color/white"
            android:paddingLeft="6dp"
            android:text=" arrival"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginBottom="4dp"
            android:layout_below="@+id/book_arrival"
            android:id="@+id/book_departure"
            android:background="@color/overlayBackground"
            android:textColor="@android:color/white"
            android:paddingLeft="6dp"
            android:text=" departure"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="4dp"
            android:layout_below="@+id/book_departure"
            android:id="@+id/book_status"
            android:background="@color/overlayBackground"
            android:textColor="@android:color/white"
            android:paddingLeft="6dp"
            android:text=" status"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>