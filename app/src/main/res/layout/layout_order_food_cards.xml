<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:background="@color/overlayBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:background="@color/overlayBackground"
                android:gravity="center"
                android:id="@+id/txtAmenities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="Food Details"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/imgOrder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:src="@drawable/meatfood_small" />

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:drawableLeft="@drawable/ic_local_dining_black_24dp"
                    android:id="@+id/tvFoodName"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="6dp"
                    android:layout_marginBottom="16dp"
                    android:height="30dp"
                    android:background="@color/overlayBackground"
                    android:hint="Food Name"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="18sp" />

                <TextView
                    android:drawableLeft="@drawable/ic_attach_money_green_24dp"
                    android:id="@+id/tvFoodPrice"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="6dp"
                    android:layout_marginBottom="6dp"
                    android:height="30dp"
                    android:background="@color/overlayBackground"
                    android:hint="Amount"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvFoodNamePhone"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="6dp"
                    android:height="30dp"
                    android:background="@android:color/white"
                    android:hint="food"
                    android:textColorHint="@android:color/black"
                    android:textSize="18sp"
                    android:visibility="gone" />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
